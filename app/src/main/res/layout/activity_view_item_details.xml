<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aitp.r3conf.org.team12mobileapp.ViewItemDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The ID"
        android:id="@+id/item_id"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_idLabel"
        android:layout_toEndOf="@+id/item_idLabel"
        android:layout_marginLeft="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID: "
        android:id="@+id/item_idLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name: "
        android:id="@+id/item_nameLabel"
        android:layout_below="@+id/item_idLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Name"
        android:id="@+id/item_name"
        android:layout_toEndOf="@+id/item_idLabel"
        android:layout_below="@+id/item_id"
        android:layout_alignLeft="@+id/item_id"
        android:layout_alignStart="@+id/item_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price:"
        android:id="@+id/item_priceLabel"
        android:layout_below="@+id/item_nameLabel"
        android:layout_alignLeft="@+id/item_nameLabel"
        android:layout_alignStart="@+id/item_nameLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Price"
        android:id="@+id/textView"
        android:layout_below="@+id/item_name"
        android:layout_alignLeft="@+id/item_name"
        android:layout_alignStart="@+id/item_name" />

</RelativeLayout>
